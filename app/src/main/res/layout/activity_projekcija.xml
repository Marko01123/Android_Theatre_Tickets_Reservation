<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EBF3F3"
    tools:context=".ProjekcijaActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/projekcije"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#EBF3F3"
            android:orientation="vertical">

            <TextView
                android:id="@+id/labelNaslovPredstave"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="16dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="20dp"
                android:textColor="#AF0000"
                android:textSize="32sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/prikazSlike"
                android:layout_width="250dp"
                android:layout_height="300dp"
                android:layout_gravity="center"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="16dp"
                android:layout_marginBottom="15dp"
                tools:srcCompat="@tools:sample/avatars" />

            <TextView
                android:id="@+id/labelGlumci"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginRight="16dp"
                android:textColor="#000000"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/labelRezija"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginRight="16dp"
                android:textColor="#000000"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/labelPisac"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginRight="16dp"
                android:textColor="#000000"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/labelGodina"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginRight="16dp"
                android:textColor="#000000"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/labelZanr"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginRight="16dp"
                android:textColor="#000000"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/labelOpis"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginRight="16dp"
                android:text="@string/labelOpis"
                android:textAllCaps="false"
                android:textColor="#000000"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/labelOpisTekst"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="2dp"
                android:layout_marginRight="16dp"
                android:layout_marginBottom="25dp"
                android:textColor="#423F3F"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/labelRezervisiteUlaznice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="16dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="16dp"
                android:text="@string/labelRezervisiteUlaznice"
                android:textColor="#AF0000"
                android:textSize="26sp"
                android:textStyle="bold" />

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>